<wxs src="../img/img.wxs" module="utils" />
<!--components/swiperBanner/swiperBanner.wxml-->
<view class="banner-group">
  <swiper
    class="{{mode}}-banner"
    indicator-dots="{{indicatorDots}}"
    indicator-color="{{indicatorColor}}"
    indicator-active-color="{{indicatorActiveColor}}"
    autoplay="{{autoplay}}"
    interval="{{interval}}"
    circular="{{circular}}"
    bindchange="swiperChange">
    <block wx:for="{{list}}" wx:for-item="item" wx:key="key">
      <swiper-item data-webviewurl="{{item.href}}" bind:tap="webview" wx:if="{{isWebview}}">
			<image  src="{{ utils.hadHttp(item.picUrl) > 1 ? item.picUrl : host + '/bTrip' + item.picUrl }}" mode="aspectFill"></image>
      </swiper-item>
      <swiper-item wx:else>
		<block wx:if="{{item.videoUrl}}">
			<video style='width:100%;height:95%;' src="{{item.videoUrl}}"></video>
		</block>
		<block wx:else>
			<image class="slide-image" src="{{ utils.hadHttp(item.picUrl) > 1 ? item.picUrl : host + '/bTrip' + item.picUrl }}" mode="aspectFill"></image>
		</block>
      </swiper-item>
    </block>
  </swiper>
</view>