/* pages/member/tourist/touristList/index.wxss */
.list{
    width: 686rpx;
    margin: 0 auto;
}
.item{
    padding: 32rpx 32rpx 32rpx 90rpx;
    /* border-radius: 14rpx; */
    background: #ffffff;
    position: relative;
    /* border-bottom: 1rpx #E3E3E7 solid; */
    position: relative;
    margin-bottom: 20rpx;
    border-radius: 14rpx;
}
.person{
    background-color: #0091FF;
    color: #fff;
    font-size: 22rpx;
    line-height: 32rpx;
    position: absolute;
    right: 0;
    top: 30rpx;
    padding: 0 6rpx;
    border-radius: 4rpx;
}
.registerTxt{
    padding: 0rpx 30rpx;
}
.name{
    display: flex;
    justify-content: space-between;
    padding-left: 40rpx;
    padding-bottom: 10rpx;
}
.check{
    position: absolute;
    width: 34rpx;
    height: 34rpx;
    top: 50%;
    margin-top: -17rpx;
    left: 50rpx;
}
.check image{
    width: 100%;
    height: 100%;
}
.flex-item{
    display: flex;
    position: relative;
    position: relative;
    line-height: 44rpx;
}
.flex-item .bold{
    color: #333333;
}
.flex-item text{
    flex: 1;
    color: #999999;
    font-size: 26rpx;
}
.flex-item .label{
    width: 120rpx;
    flex: 0 0 auto;
    padding-left: 40rpx;
}

.add-btn {
    display: flex;
    align-items: center;
    height: 100rpx;
    justify-content: center;
    color: #0091FF;
    font-size: 30rpx;
    width: 686rpx;
    margin: 0 auto;
    background-color: #fff;
    border-radius: 14rpx;
}
.add-btn image{
    width: 36rpx;
    height: 36rpx;
    margin-right: 12rpx;
}
